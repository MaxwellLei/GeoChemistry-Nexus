<Page x:Class="GeoChemistryNexus.Views.SAboutPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:lg="clr-namespace:GeoChemistryNexus.Services"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:vm="clr-namespace:GeoChemistryNexus.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="600"
      Title="SAboutPageView"
      UseLayoutRounding="True" TextOptions.TextFormattingMode="Display">
    
    <Grid>
        <hc:ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20,20,20,40" MaxWidth="800" HorizontalAlignment="Stretch">
                
                <!-- Group 1: Header/Info -->
                <TextBlock Text="GeoChemistry Nexus" Style="{StaticResource ModernSettingsGroupTitle}"/>
                <Border Style="{StaticResource ModernSettingsCard}">
                    <StackPanel>
                        <!-- App Icon & Name -->
                        <Grid Margin="16" Height="Auto">
                             <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                 <Image Source="/GeoChemistryNexus;component/Data/Icon/logo.png" Width="80" Height="80" RenderOptions.BitmapScalingMode="HighQuality" Margin="0,0,0,15"/>
                                 <TextBlock Text="GeoChemistry Nexus" FontSize="22" FontWeight="SemiBold" Foreground="#1D1D1F" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                 <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                      <TextBlock Text="Version " FontSize="14" Foreground="#86868B"/>
                                      <TextBlock Text="{Binding Version}" FontSize="14" Foreground="#86868B"/>
                                 </StackPanel>
                             </StackPanel>
                        </Grid>
                        
                        <Border Height="1" Background="#E5E5E5" Margin="16,0,0,0"/>

                        <!-- Description -->
                        <Grid Margin="16">
                             <TextBlock Text="{Binding [AboutInfo1],Source={x:Static lg:LanguageService.Instance}}" 
                                        FontSize="14" Foreground="#1D1D1F" TextWrapping="Wrap" LineHeight="20"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Group 2: Community -->
                <TextBlock Text="{Binding [community],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernSettingsGroupTitle}"/> 
                <Border Style="{StaticResource ModernSettingsCard}">
                    <StackPanel>
                         <!-- GitHub -->
                        <Grid Height="50" Background="Transparent" Margin="16,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="GitHub" VerticalAlignment="Center" FontSize="14"/>
                            <Button Grid.Column="1" Content="View" 
                                    Command="{Binding OpenUrlCommand}" 
                                    CommandParameter="https://github.com/MaxwellLei/GeoChemistry-Nexus"
                                    Width="80" Height="30"/>
                        </Grid>

                        <Border Height="1" Background="#E5E5E5" Margin="16,0,0,0"/>

                        <!-- Star Request -->
                        <Grid Margin="16">
                             <TextBlock Text="{Binding [AboutInfo2],Source={x:Static lg:LanguageService.Instance}}" 
                                        FontSize="13" Foreground="#0066CC" TextWrapping="Wrap"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Group 3: Credits -->
                <TextBlock Text="{Binding [ThankSupport],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernSettingsGroupTitle}"/>
                <Border Style="{StaticResource ModernSettingsCard}">
                    <StackPanel>
                        <!-- Shields -->
                        <Grid Margin="16">
                            <WrapPanel HorizontalAlignment="Center">
                                 <hc:Shield Subject=".NET" Status="6.0" Color="#512BD4" Margin="4"/>
                                 <hc:Shield Subject="WPF" Status="MVVM" Color="#0078D7" Margin="4"/>
                                 <hc:Shield Subject="License" Status="MIT" Color="#28A745" Margin="4"/>
                                 <hc:Shield Subject="Windows" Status=">=7.0" Color="#ea4335" Margin="4"/>
                            </WrapPanel>
                        </Grid>

                        <Border Height="1" Background="#E5E5E5" Margin="16,0,0,0"/>

                        <!-- Libraries -->
                         <Grid Margin="16">
                             <StackPanel>
                                <TextBlock Text="HandyControl, Ookii.Dialogs.Wpf, gong-wpf-dragdrop, VirtualizingWrapPanel" Foreground="#86868B" FontSize="13" HorizontalAlignment="Center" Margin="0,2"/>
                                 <TextBlock Text="ScottPlot, ReoGrid, Jint" Foreground="#86868B" FontSize="13" HorizontalAlignment="Center" Margin="0,2"/>
                                 <TextBlock Text="CommunityToolkit.Mvvm, Microsoft.Xaml.Behaviors.Wpf, System.Text.Json" Foreground="#86868B" FontSize="13" HorizontalAlignment="Center" Margin="0,2"/>
                             </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Footer -->
                <TextBlock Text="{Binding [AboutInfo3],Source={x:Static lg:LanguageService.Instance}}" 
                           FontSize="12" Foreground="#86868B" TextWrapping="Wrap" TextAlignment="Center" Margin="0,20,0,0" HorizontalAlignment="Center"/>

            </StackPanel>
        </hc:ScrollViewer>
    </Grid>
</Page>
