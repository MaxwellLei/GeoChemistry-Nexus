<mahc:MetroWindow x:Class="GeoChemistryNexus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mahc="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:local="clr-namespace:GeoChemistryNexus"
        BorderThickness="0"
        GlowBrush="Black"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--菜单栏-->
        <Menu>
            <MenuItem Header="常规投图"/>
            <MenuItem Header="温度计"/>
            <MenuItem Header="{Binding Newtitle}"/>
        </Menu>
        <!--主窗体-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--投图类型选择-->
            <GroupBox Header="绘图类型" Margin="1">
                <TreeView Margin="2">
                    <TreeViewItem Header="岩浆岩">
                        <TreeViewItem Header="构造环境">
                            <TreeViewItem Header="Pearce (1982)">
                                <TreeViewItem.InputBindings>
                                    <MouseBinding Gesture="LeftClick" Command="{Binding TestCommand}"/>
                                </TreeViewItem.InputBindings>
                            </TreeViewItem>
                            <TreeViewItem Header="Pearce (2006)" />
                        </TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem Header="沉积岩" />
                    <TreeViewItem Header="变质岩">
                        <TreeViewItem Header="Item 3.1" IsExpanded="True">
                            <TreeViewItem Header="Item 3.1.1" IsExpanded="True" />
                            <TreeViewItem Header="Item 3.1.2" />
                        </TreeViewItem>
                    </TreeViewItem>
                </TreeView>
            </GroupBox>
            <!--绘图/数据区域-->
            <Grid Grid.Column="1" Margin="0 1 0 1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <GroupBox Header="绘图面板">
                    <!--<StackPanel>-->
                        <!--<Border Height="50">
                            <WrapPanel>
                                <mahc:DropDownButton
                                    Width="100"
                                    Content="导入数据"
                                    DisplayMemberPath="Title"
                                    Orientation="Vertical">
                                </mahc:DropDownButton>
                            </WrapPanel>
                        </Border>-->
                        <TabControl>
                        <TabItem Header="绘图">
                            <ScottPlot:WpfPlot Name="WpfPlot1"/>
                        </TabItem>
                        <TabItem Header="指南">
                            <RichTextBox IsReadOnly="True" BorderThickness="1">
                                <FlowDocument>
                                    <Paragraph>
                                        <Hyperlink NavigateUri="https://github.com/MahApps/MahApps.Metro">
                                            <Run Text="Normal" />
                                        </Hyperlink>
                                        <LineBreak />
                                        <Run>Cupcake ipsum dolor sit amet dessert halvah dessert. Chocolate oat cake carrot cake sweet dragée gummi bears chocolate.</Run>
                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                        </TabItem>
                        </TabControl>
                    <!--</StackPanel>-->
                </GroupBox>
                <!-- GridSplitter 用于调整上下行的高度 -->
                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                     ResizeBehavior="PreviousAndNext"/>
                <Expander Header="数据面板" Grid.Row="2">

                </Expander>
            </Grid>

            <GroupBox Header="属性面板" Grid.Column="2" Margin="0 1 0 1">

            </GroupBox>
        </Grid>
    </Grid>
    
</mahc:MetroWindow>
