<mahc:MetroWindow x:Class="GeoChemistryNexus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mahc="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:local="clr-namespace:GeoChemistryNexus"
        xmlns:converters="clr-namespace:GeoChemistryNexus.Converter"
        BorderThickness="0"
        GlowBrush="Black"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="720" Width="1200">
    <mahc:MetroWindow.Resources>
        <converters:ColorConverter x:Key="ColorConverter"/>
    </mahc:MetroWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--菜单栏-->
        <Menu>
            <MenuItem Header="常规投图"/>
            <MenuItem Header="温度计"/>
            <MenuItem Header="{Binding Newtitle}"/>
        </Menu>
        <!--主窗体-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--投图类型选择-->
            <GroupBox Header="绘图类型" Margin="1">
                <TreeView Margin="2">
                    <TreeViewItem Header="岩浆岩">
                        <TreeViewItem Header="构造环境">
                            <TreeViewItem Header="Vermeesch (2006)">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Selected">
                                        <i:InvokeCommandAction Command="{Binding I_TS_Vermessch_2006Command}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TreeViewItem>
                            <TreeViewItem Header="Pearce (2006)" />
                        </TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem Header="沉积岩" />
                    <TreeViewItem Header="变质岩">
                        <TreeViewItem Header="Item 3.1" IsExpanded="True">
                            <TreeViewItem Header="Item 3.1.1" IsExpanded="True" />
                            <TreeViewItem Header="Item 3.1.2" />
                        </TreeViewItem>
                    </TreeViewItem>
                </TreeView>
            </GroupBox>
            <!--绘图/数据区域-->
            <Grid Grid.Column="1" Margin="0 1 0 1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <GroupBox Header="绘图面板">
                    <!--<StackPanel>-->
                        <!--<Border Height="50">
                            <WrapPanel>
                                <mahc:DropDownButton
                                    Width="100"
                                    Content="导入数据"
                                    DisplayMemberPath="Title"
                                    Orientation="Vertical">
                                </mahc:DropDownButton>
                            </WrapPanel>
                        </Border>-->
                        <TabControl>
                            <TabItem Header="绘图">
                                <ScottPlot:WpfPlot Name="WpfPlot1">
                                    <!--<i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseDoubleClick">
                                            <i:InvokeCommandAction Command="{Binding NewTestCommand}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>-->
                                </ScottPlot:WpfPlot>
                            </TabItem>
                        <TabItem Header="指南">
                            <RichTextBox IsReadOnly="True" BorderThickness="1">
                                <FlowDocument>
                                    <Paragraph>
                                        <Hyperlink NavigateUri="https://github.com/MahApps/MahApps.Metro">
                                            <Run Text="Normal" />
                                        </Hyperlink>
                                        <LineBreak />
                                        <Run>Cupcake ipsum dolor sit amet dessert halvah dessert. Chocolate oat cake carrot cake sweet dragée gummi bears chocolate.</Run>
                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                        </TabItem>
                    </TabControl>
                    <!--</StackPanel>-->
                </GroupBox>
                <!-- GridSplitter 用于调整上下行的高度 -->
                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                     ResizeBehavior="PreviousAndNext"/>
                <Expander Header="数据面板" Grid.Row="2">
                    
                </Expander>
            </Grid>

            <Grid Grid.Column="2" Margin="0 1 0 1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <GroupBox Header="图层面板">
                    <TabControl mahc:HeaderedControlHelper.HeaderFontSize="15" mahc:TabControlHelper.Underlined="TabPanel"  >
                        <TabItem Header="底图">
                            <ListBox ItemsSource="{Binding BasePlotItems}" DisplayMemberPath="DisplayName" 
                                     SelectionMode="Extended">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectionChanged">
                                        <i:InvokeCommandAction Command="{Binding LayersSelectionCommand}"
                                                               CommandParameter="{Binding SelectedItems, 
                                                                                  RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </ListBox>
                        </TabItem>
                        <TabItem Header="坐标轴">
                            <ListBox/>
                        </TabItem>
                        <TabItem Header="数据">
                            <ListBox/>
                        </TabItem>
                    </TabControl>
                </GroupBox>
                <!-- GridSplitter 用于调整上下行的高度 -->
                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                     ResizeBehavior="PreviousAndNext"/>
                <GroupBox Header="属性面板" Grid.Row="2">
                    <StackPanel Margin="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="线条类型" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" SelectedIndex="{Binding PlotLineType}">
                                <ComboBox.Items>
                                    <ComboBoxItem Content="实线 (Solid)"/>
                                    <ComboBoxItem Content="虚线 (Dash)"/>
                                    <ComboBoxItem Content="点线 (DashDot)"/>
                                    <ComboBoxItem Content="点点线(DashDotDot)"/>
                                    <ComboBoxItem Content="点状 (Dot)"/>
                                </ComboBox.Items>
                            </ComboBox>

                            <TextBlock Text="宽度" VerticalAlignment="Center" Grid.Row="1" Margin="0 5"/>
                            <mahc:NumericUpDown Grid.Row="1" Grid.Column="1" Value="{Binding PlotLineWidth,Mode=TwoWay}"
                                                Margin="0 5"/>
                            <TextBlock Text="颜色" VerticalAlignment="Center" Grid.Row="2" />
                            <mahc:ColorPicker Grid.Row="2" Grid.Column="1" Margin="0 5" 
                                              SelectedColor="{Binding PlotLineColor,Mode=TwoWay,
                                              Converter={StaticResource ColorConverter}}"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </Grid>

        </Grid>
    </Grid>
    
</mahc:MetroWindow>
