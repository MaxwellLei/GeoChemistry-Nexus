<hc:Window x:Class="GeoChemistryNexus.Views.Widgets.AddLinkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:lg="clr-namespace:GeoChemistryNexus.Services"
        mc:Ignorable="d"
        Title="{Binding [add_link],Source={x:Static lg:LanguageService.Instance}}" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <hc:TextBox Name="TitleBox" hc:InfoElement.Title="{Binding [name],Source={x:Static lg:LanguageService.Instance}}" hc:InfoElement.Necessary="True" Margin="0,0,0,15"/>

        <hc:TextBox Name="UrlBox" hc:InfoElement.Title="{Binding [link_url],Source={x:Static lg:LanguageService.Instance}}" hc:InfoElement.Necessary="True" Grid.Row="1" Margin="0,0,0,15"/>

        <hc:TextBox Name="DescBox" hc:InfoElement.Title="{Binding [description],Source={x:Static lg:LanguageService.Instance}}" Grid.Row="2" Margin="0,0,0,15"/>

        <hc:ComboBox Name="IconBox" hc:InfoElement.Title="{Binding [icon],Source={x:Static lg:LanguageService.Instance}}" Grid.Row="3" Margin="0,0,0,15" SelectedValuePath="Code">
            <hc:ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Code}" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </hc:ComboBox.ItemTemplate>
        </hc:ComboBox>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{Binding [Cancel],Source={x:Static lg:LanguageService.Instance}}" Click="Cancel_Click" Margin="0,0,10,0"/>
            <Button Content="{Binding [Confirm],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ButtonPrimary}" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</hc:Window>
