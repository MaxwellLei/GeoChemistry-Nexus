<UserControl x:Class="GeoChemistryNexus.Views.Widgets.TemplateRepairWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:lg="clr-namespace:GeoChemistryNexus.Services"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding [drawing_template_repair_tool],Source={x:Static lg:LanguageService.Instance}}" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <hc:ScrollViewer Grid.Row="1" Margin="0,0,0,10" Background="#F5F5F5" Padding="10">
            <TextBlock Text="{Binding LogText}" TextWrapping="Wrap"/>
        </hc:ScrollViewer>

        <Button Grid.Row="2" Content="{Binding [start_check_and_repair],Source={x:Static lg:LanguageService.Instance}}" Command="{Binding CheckAndRepairCommand}" 
                Style="{StaticResource ButtonPrimary}" HorizontalAlignment="Right"
                IsEnabled="{Binding IsNotBusy}"/>
    </Grid>
</UserControl>
