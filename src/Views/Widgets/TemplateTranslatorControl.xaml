<UserControl x:Class="GeoChemistryNexus.Views.Widgets.TemplateTranslatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="0,0,0,10" Background="#F5F5F5" Padding="5" CornerRadius="5"
                Visibility="{Binding IsFileLoaded, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <Button Content="关闭文件" Command="{Binding CloseFileCommand}" Margin="5,0" Style="{StaticResource ButtonDanger}"/>
                <Button Content="打开导入" Click="Border_MouseLeftButtonDown" Margin="5,0" />
                <Rectangle Width="1" Fill="#CCCCCC" Margin="5,2"/>
                <Button Content="添加语言列" Click="AddLanguage_Click" Margin="5,0" Style="{StaticResource ButtonPrimary}"/>
                <Button Content="交换语言列" Click="SwapLanguage_Click" Margin="5,0"/>
                <Button Content="删除语言列" Click="RemoveLanguage_Click" Margin="5,0" Style="{StaticResource ButtonWarning}"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0,0,0,10" AllowDrop="True" Drop="Border_Drop" Background="Transparent"
              MouseLeftButtonDown="Border_MouseLeftButtonDown" Cursor="Hand"
              Visibility="{Binding IsFileLoaded, Converter={StaticResource BooleanToVisibilityReConverter}}">
            <Rectangle Stroke="{DynamicResource PrimaryBrush}" StrokeThickness="2" RadiusX="10" RadiusY="10" StrokeDashArray="4 2"/>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50">
                <TextBlock Text="点击或拖拽模板文件(JSON)到此处" FontSize="18" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryTextBrush}"/>
                <TextBlock Text="支持 .json 格式" HorizontalAlignment="Center" Margin="0,5,0,0" Foreground="Gray"/>
            </StackPanel>
        </Grid>

        <DataGrid Grid.Row="1" ItemsSource="{Binding TranslationTable}" AutoGenerateColumns="True" 
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"
                  HeadersVisibility="Column" GridLinesVisibility="All"
                  RowHeaderWidth="0" AlternatingRowBackground="#F0F0F0"
                  Visibility="{Binding IsFileLoaded, Converter={StaticResource BooleanToVisibilityConverter}}">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
        </DataGrid>

        <Grid Grid.Row="2" Margin="0,10,0,0" Visibility="{Binding IsFileLoaded, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
            
            <Button Grid.Column="1" Content="保存更改" Command="{Binding SaveTemplateCommand}" 
                    Style="{StaticResource ButtonPrimary}" Width="120"/>
        </Grid>
    </Grid>
</UserControl>
