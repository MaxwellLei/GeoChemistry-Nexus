                                <uc:TitlePropertyControl SelectedObject="{Binding}"/>
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type models:FunctionDefinition}">
                                <uc:FunctionPropertyControl SelectedObject="{Binding}"/>
                            </DataTemplate>
