        <cvs:GraphMapPathToIconConverter x:Key="GraphMapPathToIconConverter"/>
        <cvs:IndexToBooleanConverter x:Key="IndexToBooleanConverter"/>
        <cvs:StringToBitmapImageConverter x:Key="StringToBitmapImageConverter"/>

        <Storyboard x:Key="SwitchToPlotModeStoryboard">
            <!-- TemplateGrid Fade Out & Slide Left -->
            <DoubleAnimation Storyboard.TargetName="TemplateGrid" Storyboard.TargetProperty="Opacity"
                             To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="TemplateGrid" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             To="-100" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TemplateGrid" Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.3">
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>

            <!-- PlotGrid Fade In & Slide From Right -->
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PlotGrid" Storyboard.TargetProperty="Visibility" Duration="0:0:0">
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetName="PlotGrid" Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3" BeginTime="0:0:0.1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="PlotGrid" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="100" To="0" Duration="0:0:0.3" BeginTime="0:0:0.1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="SwitchToTemplateModeStoryboard">
            <!-- PlotGrid Fade Out & Slide Right -->
            <DoubleAnimation Storyboard.TargetName="PlotGrid" Storyboard.TargetProperty="Opacity"
                             To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="PlotGrid" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             To="100" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PlotGrid" Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.3">
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>

            <!-- TemplateGrid Fade In & Slide From Left -->
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TemplateGrid" Storyboard.TargetProperty="Visibility" Duration="0:0:0">
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetName="TemplateGrid" Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3" BeginTime="0:0:0.1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="TemplateGrid" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="-100" To="0" Duration="0:0:0.3" BeginTime="0:0:0.1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

