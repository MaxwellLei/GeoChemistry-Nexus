<Page x:Class="GeoChemistryNexus.Views.SPlotPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:lg="clr-namespace:GeoChemistryNexus.Helpers"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:local="clr-namespace:GeoChemistryNexus.Views"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SPlotPageView">
    <Grid Margin="10 30 10 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <hc:ScrollViewer HorizontalAlignment="Stretch" Padding="120 0">
            <VirtualizingStackPanel HorizontalAlignment="Stretch" Margin="0 0 10 0">
                <!--程序路径-->
                <hc:Divider Content="程序路径" HorizontalContentAlignment="Left" FontSize="20" FontWeight="Bold" LineStrokeThickness="5"/>
                
                <!--CorelDRAW 路径-->
                <GroupBox Header="CorelDRAW 程序路径" Style="{StaticResource GroupBoxOriginal}" hc:TitleElement.TitlePlacement="Left" 
                              FontSize="16" Margin="0 0 0 5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding CorelDRAWPath}" IsReadOnly="True" Margin="0 0 10 0" VerticalAlignment="Center"/>
                        <Button Grid.Column="1" Content="选择路径" Command="{Binding SelectCorelDRAWPathCommand}"/>
                    </Grid>
                </GroupBox>

                <!--Inkscape 路径-->
                <GroupBox Header="Inkscape 程序路径" Style="{StaticResource GroupBoxOriginal}" hc:TitleElement.TitlePlacement="Left" 
                              FontSize="16" Margin="0 0 0 5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding InkscapePath}" IsReadOnly="True" Margin="0 0 10 0" VerticalAlignment="Center"/>
                        <Button Grid.Column="1" Content="选择路径" Command="{Binding SelectInkscapePathCommand}"/>
                    </Grid>
                </GroupBox>

                <!--Adobe Illustrator 路径-->
                <GroupBox Header="Adobe Illustrator 程序路径" Style="{StaticResource GroupBoxOriginal}" hc:TitleElement.TitlePlacement="Left" 
                              FontSize="16" Margin="0 0 0 5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding AdobeIllustratorPath}" IsReadOnly="True" Margin="0 0 10 0" VerticalAlignment="Center"/>
                        <Button Grid.Column="1" Content="选择路径" Command="{Binding SelectAdobeIllustratorPathCommand}"/>
                    </Grid>
                </GroupBox>

                <!--绘图默认设置-->
                <hc:Divider Content="绘图默认设置" HorizontalContentAlignment="Left" FontSize="20" FontWeight="Bold" LineStrokeThickness="5"/>

                <!--默认加载绘图语言-->
                <GroupBox Header="默认加载绘图语言" Style="{StaticResource GroupBoxOriginal}" hc:TitleElement.TitlePlacement="Left" 
                              FontSize="16" Margin="0 0 0 5">
                    <ComboBox SelectedIndex="{Binding DefaultPlotLanguage}" FontSize="12" VerticalAlignment="Center" 
                              HorizontalAlignment="Right">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding DefaultPlotLanguageChangedCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ComboBox.Items>
                            <ComboBoxItem Content="{Binding [ChineseS],Source={x:Static lg:LanguageService.Instance}}"/>
                            <ComboBoxItem Content="{Binding [EnglishUS],Source={x:Static lg:LanguageService.Instance}}"/>
                        </ComboBox.Items>
                    </ComboBox>
                </GroupBox>

                <!--默认第三方软件-->
                <GroupBox Header="默认第三方软件" Style="{StaticResource GroupBoxOriginal}" hc:TitleElement.TitlePlacement="Left" 
                              FontSize="16" Margin="0 0 0 5">
                    <ComboBox ItemsSource="{Binding ThirdPartyApps}" SelectedValue="{Binding SelectedThirdPartyApp}" FontSize="12" VerticalAlignment="Center" 
                              HorizontalAlignment="Right" Width="150"/>
                </GroupBox>

                <!--自动更新设置-->
                <hc:Divider Content="自动更新" HorizontalContentAlignment="Left" FontSize="20" FontWeight="Bold" LineStrokeThickness="5"/>

                <!--自动检查模板更新-->
                <GroupBox Header="自动检查模板更新" Style="{StaticResource GroupBoxOriginal}" 
                          hc:TitleElement.TitlePlacement="Left" FontSize="16" Margin="0 0 0 5" >
                    <ToggleButton Style="{StaticResource ToggleButtonSwitch}" IsChecked="{Binding AutoCheckTemplateUpdate}" 
                                  HorizontalAlignment="Right"/>
                </GroupBox>

                <!--自动检查内置分类结构更新-->
                <GroupBox Header="自动检查内置分类结构更新" Style="{StaticResource GroupBoxOriginal}" 
                          hc:TitleElement.TitlePlacement="Left" FontSize="16" Margin="0 0 0 5" >
                    <ToggleButton Style="{StaticResource ToggleButtonSwitch}" IsChecked="{Binding AutoCheckClassStructUpdate}" 
                                  HorizontalAlignment="Right"/>
                </GroupBox>

            </VirtualizingStackPanel>
        </hc:ScrollViewer>
    </Grid>
</Page>
