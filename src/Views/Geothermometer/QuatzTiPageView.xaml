<Page x:Class="GeoChemistryNexus.Views.Geothermometer.QuatzTiPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GeoChemistryNexus.Views.Geothermometer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ZirconTiPageView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="0.25*"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!--标题-->
        <hc:Divider Content="石英 Ti 温度计" HorizontalContentAlignment="Left" FontSize="20" 
                    FontWeight="Bold" LineStrokeThickness="5"/>
        <!--设置部分-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--导入文件框-->
            <Border CornerRadius="8" BorderThickness="1" Background="#FBFBFB"
                    AllowDrop="True" Drop="Border_Drop" DragEnter="Border_DragEnter"
                    MouseLeftButtonDown="Click_Import_File">
                <Border.BorderBrush>
                    <VisualBrush>
                        <VisualBrush.Visual>
                            <Rectangle StrokeDashArray="4 2" Stroke="#ADADAD" StrokeThickness="1"
                                Width="180" Height="50"/>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Border.BorderBrush>
                <TextBlock Text="点击 或者 拖拽文件到此处" VerticalAlignment="Center" HorizontalAlignment="Center"
                               FontSize="18"/>
            </Border>
            <!--设置属性-->
            <StackPanel Grid.Column="1" Margin="10 0">
                <Border BorderThickness="1" BorderBrush="#E5E5E5" CornerRadius="8" Height="50" Background="#FBFBFB">
                    <DockPanel VerticalAlignment="Center" Margin="10 0">
                        <TextBlock Text="显示误差范围" VerticalAlignment="Center"/>
                        <ToggleButton Style="{StaticResource ToggleButtonSwitch}" HorizontalAlignment="Right"
                                      IsChecked="{Binding Mode}"/>
                    </DockPanel>
                </Border>
                <DockPanel Margin="0 5" Height="50">
                    <Button Content="重置" Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                            Height="42" Width="80" Margin="0 0 5 0" Command="{Binding ReSetCommand}"
                            Style="{StaticResource ButtonDanger}"/>
                    <Button Content="计算" Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                            Height="42" Width="120" Margin="0 0 5 0" Command="{Binding CalTemCommand}"
                            Style="{StaticResource ButtonSuccess}"/>
                    <Button Content="导出结果" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                            Height="42" Style="{StaticResource ButtonPrimary}" Command="{Binding Export_DataCommand}"/>
                </DockPanel>
            </StackPanel>
        </Grid>
        <!--数据视图-->
        <DataGrid ItemsSource="{Binding ExcelData,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="True" Grid.Row="2" Margin="0 10"
                  CanUserAddRows="True" IsReadOnly="False" EnableRowVirtualization="True" SelectionUnit="Cell"
                  ColumnWidth="*" CanUserSortColumns="False" CellEditEnding="DataGrid_CellEditEnding"/>
        <!--步骤条-->
        <hc:StepBar Grid.Row="3" StepIndex="{Binding StepIndex}" >
            <hc:StepBarItem Content="导入 / 填入数据"/>
            <hc:StepBarItem Content="检查设置"/>
            <hc:StepBarItem Content="计算结果"/>
        </hc:StepBar>
    </Grid>
</Page>
