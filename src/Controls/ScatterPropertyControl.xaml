<UserControl x:Class="GeoChemistryNexus.Controls.ScatterPropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:models="clr-namespace:GeoChemistryNexus.Models"
             xmlns:cvs="clr-namespace:GeoChemistryNexus.Converter"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:scott="clr-namespace:ScottPlot;assembly=ScottPlot"
             xmlns:lg="clr-namespace:GeoChemistryNexus.Services"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300"
             Background="#F5F5F7">
    <UserControl.Resources>
        <cvs:NumericTypeConverter x:Key="NumericTypeConverter"/>
        <cvs:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <cvs:StringColorConverter x:Key="StringColorConverter"/>
        <cvs:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <cvs:DoublePrecisionConverter x:Key="DoublePrecisionConverter" Precision="4"/>
        
        <ObjectDataProvider x:Key="MarkerShapeEnum" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="scott:MarkerShape"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Grid DataContext="{Binding SelectedObject, RelativeSource={RelativeSource AncestorType=local:ScatterPropertyControl}}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10,12,10,12">
                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="&#xe602;" FontFamily="../Data/Icon/#iconfont" FontSize="24" Foreground="#1D1D1F" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding [point],Source={x:Static lg:LanguageService.Instance}}" 
                               FontSize="22" FontWeight="Bold" Foreground="#1D1D1F" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Position Group -->
                <TextBlock Text="{Binding [position],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernSettingsGroupTitle}" Margin="4,10,0,6"/>
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,8">
                    <StackPanel Margin="10">
                        <!-- Coordinates Label & Pick Button -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding [start_and_end_coordinates],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}" VerticalAlignment="Center" Margin="0"/>
                            
                            <Button Grid.Column="1"
                                    Width="28" Height="28" 
                                    Margin="0,0,0,4"
                                    Style="{StaticResource ModernIconButtonStyle}"
                                    ToolTip="{Binding [coordinate_positioning],Source={x:Static lg:LanguageService.Instance}}"
                                    IsEnabled="False">
                                <TextBlock FontFamily="../Data/Icon/#iconfont" Text="&#xe601;" FontSize="16" Foreground="#999"/>
                            </Button>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <hc:NumericUpDown Grid.Column="0" Value="{Binding StartAndEnd.X, Mode=OneWay, Converter={StaticResource NumericTypeConverter}}" 
                                      hc:InfoElement.Title="X" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.TitleWidth="15"
                                      hc:InfoElement.Placeholder="0.0" IsReadOnly="True"
                                      Style="{StaticResource ModernNumericUpDownStyle}"/>
                                      
                            <hc:NumericUpDown Grid.Column="2" Value="{Binding StartAndEnd.Y, Mode=OneWay, Converter={StaticResource NumericTypeConverter}}" 
                                      hc:InfoElement.Title="Y" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.TitleWidth="15"
                                      hc:InfoElement.Placeholder="0.0" IsReadOnly="True"
                                      Style="{StaticResource ModernNumericUpDownStyle}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Style Group -->
                <TextBlock Text="{Binding [style],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernSettingsGroupTitle}" Margin="4,10,0,6"/>
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,8">
                    <StackPanel Margin="10">
                        
                        <!-- Color -->
                        <TextBlock Text="{Binding [color],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                        <local:TextPropertyColorPicker SelectedColor="{Binding Color, Mode=TwoWay, Converter={StaticResource StringColorConverter}}" Margin="0,0,0,16" Height="32"/>

                        <!-- Size & Type Grid -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Size -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding [size],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                                <hc:NumericUpDown Value="{Binding Size, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                                  hc:InfoElement.Placeholder="pt" 
                                                  Style="{StaticResource ModernNumericUpDownStyle}"/>
                            </StackPanel>

                            <!-- Type -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="{Binding [type],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                                <ComboBox ItemsSource="{Binding Source={StaticResource MarkerShapeEnum}}"
                                          SelectedValue="{Binding MarkerShape, Mode=TwoWay}"
                                          DisplayMemberPath="."
                                          Style="{StaticResource ModernComboBoxStyle}"/>
                            </StackPanel>
                        </Grid>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
