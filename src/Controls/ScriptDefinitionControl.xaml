<UserControl x:Class="GeoChemistryNexus.Controls.ScriptDefinitionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lg="clr-namespace:GeoChemistryNexus.Services"
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:models="clr-namespace:GeoChemistryNexus.Models"
             mc:Ignorable="d" 
             Background="#F5F5F7"
             d:DesignHeight="600" d:DesignWidth="300">
    <UserControl.Resources>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10,12,10,12">
                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="&#xe614;" FontFamily="../Data/Icon/#iconfont" FontSize="24" Foreground="#1D1D1F" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding [script_definition],Source={x:Static lg:LanguageService.Instance}}" 
                               FontSize="22" FontWeight="Bold" Foreground="#1D1D1F" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Settings -->
                <TextBlock Text="{Binding [script_settings],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernSettingsGroupTitle}" Margin="4,10,0,6"/>
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,8">
                    <StackPanel Margin="10">
                        <!-- Language -->
                        <TextBlock Text="{Binding [script_language],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                        <ComboBox x:Name="LanguageComboBox" 
                                  Margin="0,0,0,16"
                                  SelectedValue="{Binding ScriptDefinition.Language, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  DisplayMemberPath="DisplayName"
                                  SelectedValuePath="Value"
                                  Style="{StaticResource ModernComboBoxStyle}"/>

                        <!-- Data Series -->
                        <TextBlock Text="{Binding [data_series],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                        <TextBox x:Name="RequiredDataSeriesTextBox"
                                    Text="{Binding ScriptDefinition.RequiredDataSeries, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Margin="0,0,0,8"
                                    Padding="10,8"
                                    Background="#F2F2F7" BorderThickness="0"
                                    hc:BorderElement.CornerRadius="6"/>
                        
                        <TextBlock Text="{Binding [multiple_data_series_hint],Source={x:Static lg:LanguageService.Instance}}" 
                                   FontSize="11" TextWrapping="Wrap"
                                   Foreground="#8E8E93"/>
                    </StackPanel>
                </Border>

                <!-- Script Content -->
                <TextBlock Text="{Binding [script_content],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernSettingsGroupTitle}" Margin="4,10,0,6"/>
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,8">
                    <StackPanel Margin="10">
                        <Border Background="#FAFAFA" BorderBrush="#E5E5E5" BorderThickness="1" CornerRadius="6" Margin="0,0,0,16">
                            <TextBox x:Name="ScriptBodyTextBox"
                                     Text="{Binding ScriptDefinition.ScriptBody, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                     Height="240"
                                     AcceptsReturn="True"
                                     AcceptsTab="True"
                                     FontFamily="Menlo, Consolas, Courier New"
                                     FontSize="12"
                                     TextWrapping="NoWrap"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     Background="Transparent"
                                     Padding="12"
                                     VerticalContentAlignment="Top"
                                     BorderThickness="0"/>
                        </Border>

                        <!-- Status Bar -->
                        <Border Background="#F2F2F7" 
                                CornerRadius="6" 
                                Padding="12,8"
                                Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="StatusTextBlock" 
                                           Grid.Column="0"
                                           Text="{Binding [ready],Source={x:Static lg:LanguageService.Instance}}" 
                                           FontSize="12" 
                                           Foreground="#666666"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>

                                <TextBlock x:Name="LineColumnTextBlock"
                                           Grid.Column="1" 
                                           Text="{Binding [row_1_column_1],Source={x:Static lg:LanguageService.Instance}}" 
                                           FontSize="12" 
                                           Foreground="#8E8E93"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Actions -->
                        <Button x:Name="ValidateButton" 
                                Content="{Binding [validate_syntax],Source={x:Static lg:LanguageService.Instance}}" 
                                Style="{StaticResource ModernButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Click="ValidateButton_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
