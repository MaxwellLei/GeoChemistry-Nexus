<UserControl x:Class="GeoChemistryNexus.Controls.ScriptDefinitionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lg="clr-namespace:GeoChemistryNexus.Helpers"
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:models="clr-namespace:GeoChemistryNexus.Models"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Expander" BasedOn="{StaticResource ExpanderBaseStyle}">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ButtonIcon" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F3F3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                <!-- Header -->
                <DockPanel LastChildFill="False" Margin="0,0,0,15">
                    <TextBlock Text="{Binding [script_definition],Source={x:Static lg:LanguageService.Instance}}" FontWeight="Bold" FontSize="16" Foreground="#333"/>
                </DockPanel>

                <!-- Settings -->
                <Expander Header="{Binding [script_settings],Source={x:Static lg:LanguageService.Instance}}">
                    <StackPanel Margin="8,5,8,5">
                        <!-- Language -->
                        <TextBlock Text="{Binding [script_language],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <ComboBox x:Name="LanguageComboBox" 
                                  Margin="0,0,0,10"
                                  SelectedValue="{Binding ScriptDefinition.Language, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  DisplayMemberPath="DisplayName"
                                  SelectedValuePath="Value"/>

                        <!-- Data Series -->
                        <TextBlock Text="{Binding [data_series],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <hc:TextBox x:Name="RequiredDataSeriesTextBox"
                                    Text="{Binding ScriptDefinition.RequiredDataSeries, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Margin="0,0,0,4"
                                    hc:InfoElement.Placeholder="e.g. x, y, z"/>
                        
                        <TextBlock Text="{Binding [multiple_data_series_hint],Source={x:Static lg:LanguageService.Instance}}" 
                                   FontSize="10" TextWrapping="Wrap"
                                   Foreground="#999999" 
                                   Margin="0,0,0,10"/>
                    </StackPanel>
                </Expander>

                <!-- Script Content -->
                <Expander Header="{Binding [script_content],Source={x:Static lg:LanguageService.Instance}}">
                    <StackPanel Margin="8,5,8,5">
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,0,0,10">
                            <TextBox x:Name="ScriptBodyTextBox"
                                     Text="{Binding ScriptDefinition.ScriptBody, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                     Height="200"
                                     AcceptsReturn="True"
                                     AcceptsTab="True"
                                     FontFamily="Consolas, Courier New"
                                     FontSize="12"
                                     TextWrapping="NoWrap"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     Background="#FAFAFA"
                                     Padding="8"
                                     VerticalContentAlignment="Top"
                                     BorderThickness="0"/>
                        </Border>

                        <!-- Status Bar -->
                        <Border Background="#F5F5F5" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                CornerRadius="4" 
                                Padding="8,6"
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="StatusTextBlock" 
                                           Grid.Column="0"
                                           Text="{Binding [ready],Source={x:Static lg:LanguageService.Instance}}" 
                                           FontSize="11" 
                                           Foreground="#666666"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>

                                <TextBlock x:Name="LineColumnTextBlock"
                                           Grid.Column="1" 
                                           Text="{Binding [row_1_column_1],Source={x:Static lg:LanguageService.Instance}}" 
                                           FontSize="11" 
                                           Foreground="#666666"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Actions -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="ValidateButton" 
                                    Content="{Binding [validate_syntax],Source={x:Static lg:LanguageService.Instance}}" 
                                    Style="{StaticResource ButtonPrimary}"
                                    Padding="12,6" 
                                    Click="ValidateButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>