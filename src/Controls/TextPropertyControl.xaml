<UserControl x:Class="GeoChemistryNexus.Controls.TextPropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:models="clr-namespace:GeoChemistryNexus.Models"
             xmlns:cvs="clr-namespace:GeoChemistryNexus.Converter"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:lg="clr-namespace:GeoChemistryNexus.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300">
    <UserControl.Resources>
        <cvs:NumericTypeConverter x:Key="NumericTypeConverter"/>
        <cvs:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <cvs:StringColorConverter x:Key="StringColorConverter"/>
        <cvs:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <cvs:DoublePrecisionConverter x:Key="DoublePrecisionConverter" Precision="4"/>
        
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Expander" BasedOn="{StaticResource ExpanderBaseStyle}">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ToggleButtonIcon" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#E5F1FB"/>
                                <Setter Property="Foreground" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F3F3"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="#CDE4F7"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ButtonIcon" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F3F3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style x:Key="ToggleButtonSwitch" TargetType="ToggleButton" BasedOn="{StaticResource ToggleButtonSwitch}">
        </Style>
    </UserControl.Resources>

    <Grid DataContext="{Binding SelectedObject, RelativeSource={RelativeSource AncestorType=local:TextPropertyControl}}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                <!-- Header -->
                <DockPanel LastChildFill="False" Margin="0,0,0,15">
                    <TextBlock Text="{Binding [text],Source={x:Static lg:LanguageService.Instance}}" FontWeight="Bold" FontSize="16" Foreground="#333"/>
                </DockPanel>

                <!-- Layout & Content -->
                <Expander Header="{Binding [content_and_position],Source={x:Static lg:LanguageService.Instance}}">
                    <StackPanel Margin="8,5,8,5">
                        <!-- Alignment -->
                            <TextBlock Text="{Binding [alignment],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                            <Border CornerRadius="4" BorderThickness="1" BorderBrush="#E0E0E0" Background="#F8F9FA" Margin="0,0,0,10">
                                <UniformGrid Rows="1" Height="32">
                                    <RadioButton Style="{StaticResource ToggleButtonIcon}" 
                                                IsChecked="{Binding ContentHorizontalAlignment, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Left}"
                                                ToolTip="Left">
                                        <TextBlock Text="&#xe641;" FontFamily="../Data/Icon/#iconfont"/>
                                    </RadioButton>
                                    <RadioButton Style="{StaticResource ToggleButtonIcon}" 
                                                IsChecked="{Binding ContentHorizontalAlignment, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Center}"
                                                ToolTip="Center">
                                        <TextBlock Text="&#xe627;" FontFamily="../Data/Icon/#iconfont"/>
                                    </RadioButton>
                                    <RadioButton Style="{StaticResource ToggleButtonIcon}" 
                                                IsChecked="{Binding ContentHorizontalAlignment, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Right}"
                                                ToolTip="Right">
                                        <TextBlock Text="&#xe63c;" FontFamily="../Data/Icon/#iconfont"/>
                                    </RadioButton>
                                </UniformGrid>
                            </Border>

                            <!-- Content Text -->
                            <TextBlock Text="{Binding [content],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                            <local:LocalizedStringControl Value="{Binding Content, Mode=TwoWay}" Margin="0,0,0,10"/>

                            <!-- Position -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding [position],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                                
                                <!-- 拾取坐标按钮 -->
                                <Button Grid.Column="1"
                                        Width="20" Height="20" 
                                        Margin="0,0,0,4"
                                        Padding="0"
                                        Style="{StaticResource ButtonIcon}"
                                        ToolTip="{Binding [coordinate_positioning],Source={x:Static lg:LanguageService.Instance}}"
                                        Click="PickPointButton_Click">
                                    <Path Data="M12,9 A3,3 0 1,1 12,15 A3,3 0 1,1 12,9 Z M12,4 A8,8 0 1,1 12,20 A8,8 0 1,1 12,4 Z M12,6 A6,6 0 1,0 12,18 A6,6 0 1,0 12,6 Z M11,4 L11,2 A1,1 0 0,1 13,2 L13,4 Z M11,20 L13,20 L13,22 A1,1 0 0,1 11,22 Z M4,11 L2,11 A1,1 0 0,1 2,13 L4,13 Z M20,11 L22,11 A1,1 0 0,1 22,13 L20,13 Z" 
                                          Fill="#666" 
                                          Stretch="Uniform" 
                                          Width="12" 
                                          Height="12"/>
                                </Button>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <hc:NumericUpDown Grid.Column="0" Value="{Binding StartAndEnd.X, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                          hc:InfoElement.Title="X" hc:InfoElement.TitlePlacement="Left"
                                          hc:InfoElement.Placeholder="0.0"/>
                                          
                                <hc:NumericUpDown Grid.Column="2" Value="{Binding StartAndEnd.Y, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                          hc:InfoElement.Title="Y" hc:InfoElement.TitlePlacement="Left"
                                          hc:InfoElement.Placeholder="0.0"/>
                            </Grid>
                        </StackPanel>
                    </Expander>

                    <!-- Typography -->
                    <Expander Header="{Binding [font_style],Source={x:Static lg:LanguageService.Instance}}">
                        <StackPanel Margin="8,5,8,5">
                            <!-- Font Family -->
                            <TextBlock Text="{Binding [font_family],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                            <local:FontFamilyControl FontFamilyName="{Binding Family, Mode=TwoWay}" Margin="0,0,0,10"/>

                            <!-- Style -->
                            <TextBlock Text="{Binding [style],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <ToggleButton Width="40" Height="30" Margin="0,0,4,0" 
                                                IsChecked="{Binding IsBold, Mode=TwoWay}"
                                                Style="{StaticResource FontStyleToggleButtonStyle}">
                                        <TextBlock Text="B" FontWeight="Bold"/>
                                    </ToggleButton>
                                    <ToggleButton Width="40" Height="30" 
                                                IsChecked="{Binding IsItalic, Mode=TwoWay}"
                                                Style="{StaticResource FontStyleToggleButtonStyle}">
                                        <TextBlock Text="I" FontStyle="Italic" FontFamily="Times New Roman"/>
                                    </ToggleButton>
                                </StackPanel>

                                <local:TextPropertyColorPicker Grid.Column="2" 
                                                       SelectedColor="{Binding Color, Mode=TwoWay, Converter={StaticResource StringColorConverter}}" Width="100"/>
                            </Grid>

                            <!-- Size & Rotation -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding [font_size],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                                    <hc:NumericUpDown Value="{Binding Size, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" hc:InfoElement.Placeholder="pt" />
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="{Binding [font_rotation],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                                    <hc:NumericUpDown Value="{Binding Rotation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" hc:InfoElement.Placeholder="°" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Expander>

                    <!-- Rendering -->
                    <Expander Header="{Binding [advanced_rendering],Source={x:Static lg:LanguageService.Instance}}" IsExpanded="False">
                        <StackPanel Margin="8,5,8,5">
                            <DockPanel>
                                <TextBlock Text="{Binding [anti_aliasing],Source={x:Static lg:LanguageService.Instance}}" VerticalAlignment="Center" Foreground="#333"/>
                                <ToggleButton Style="{StaticResource ToggleButtonSwitch}" HorizontalAlignment="Right" IsChecked="{Binding AntiAliasEnable, Mode=TwoWay}"/>
                            </DockPanel>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
    </Grid>
</UserControl>
