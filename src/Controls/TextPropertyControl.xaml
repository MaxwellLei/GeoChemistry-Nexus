<UserControl x:Class="GeoChemistryNexus.Controls.TextPropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:models="clr-namespace:GeoChemistryNexus.Models"
             xmlns:cvs="clr-namespace:GeoChemistryNexus.Converter"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:lg="clr-namespace:GeoChemistryNexus.Services"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300"
             Background="#F5F5F7"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <cvs:NumericTypeConverter x:Key="NumericTypeConverter"/>
        <cvs:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <cvs:StringColorConverter x:Key="StringColorConverter"/>
        <cvs:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <cvs:DoublePrecisionConverter x:Key="DoublePrecisionConverter" Precision="4"/>
        
        <Style x:Key="ToggleButtonSwitch" TargetType="ToggleButton" BasedOn="{StaticResource ToggleButtonSwitch}">
        </Style>

        <Style x:Key="AlignmentToggleButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#E5F1FB"/>
                                <Setter Property="Foreground" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E5EA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid DataContext="{Binding SelectedObject, RelativeSource={RelativeSource AncestorType=local:TextPropertyControl}}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10,12,10,12">
                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="&#xe64b;" FontFamily="../Data/Icon/#iconfont" FontSize="24" Foreground="#1D1D1F" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding [text],Source={x:Static lg:LanguageService.Instance}}" 
                               FontSize="22" FontWeight="Bold" Foreground="#1D1D1F" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Layout & Content -->
                <TextBlock Text="{Binding [content_and_position],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernSettingsGroupTitle}" Margin="4,10,0,6"/>
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,8">
                    <StackPanel Margin="10">
                        <!-- Alignment -->
                        <TextBlock Text="{Binding [alignment],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                        <Border CornerRadius="6" BorderThickness="1" BorderBrush="#E0E0E0" Background="#F2F2F7" Margin="0,0,0,16">
                            <UniformGrid Rows="1" Height="32">
                                <RadioButton Style="{StaticResource AlignmentToggleButtonStyle}" 
                                            IsChecked="{Binding ContentHorizontalAlignment, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Left}"
                                            ToolTip="Left" Background="Transparent" BorderThickness="0">
                                    <TextBlock Text="&#xe641;" FontFamily="../Data/Icon/#iconfont" FontSize="16" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                                </RadioButton>
                                <RadioButton Style="{StaticResource AlignmentToggleButtonStyle}" 
                                            IsChecked="{Binding ContentHorizontalAlignment, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Center}"
                                            ToolTip="Center" Background="Transparent" BorderThickness="0">
                                    <TextBlock Text="&#xe627;" FontFamily="../Data/Icon/#iconfont" FontSize="16" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                                </RadioButton>
                                <RadioButton Style="{StaticResource AlignmentToggleButtonStyle}" 
                                            IsChecked="{Binding ContentHorizontalAlignment, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Right}"
                                            ToolTip="Right" Background="Transparent" BorderThickness="0">
                                    <TextBlock Text="&#xe63c;" FontFamily="../Data/Icon/#iconfont" FontSize="16" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                                </RadioButton>
                            </UniformGrid>
                        </Border>

                        <!-- Content Text -->
                        <TextBlock Text="{Binding [content],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                        <local:LocalizedStringControl Value="{Binding Content, Mode=TwoWay}" Margin="0,0,0,16"/>

                        <!-- Position -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding [position],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}" VerticalAlignment="Center" Margin="0"/>

                            <!-- 拾取坐标按钮 -->
                            <Button Grid.Column="1"
                                    Width="28" Height="28" 
                                    Margin="0,0,0,4"
                                    Style="{StaticResource ModernIconButtonStyle}"
                                    ToolTip="{Binding [coordinate_positioning],Source={x:Static lg:LanguageService.Instance}}"
                                    Click="PickPointButton_Click">
                                <TextBlock FontFamily="../Data/Icon/#iconfont" Text="&#xe601;" FontSize="16" Foreground="#007AFF"/>
                            </Button>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <hc:NumericUpDown x:Name="PositionX" Grid.Column="0"
                                      hc:InfoElement.Title="X" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.TitleWidth="15"
                                      hc:InfoElement.Placeholder="0.0"
                                      ValueChanged="PositionCoordinate_ValueChanged"
                                      Style="{StaticResource ModernNumericUpDownStyle}"/>
                                      
                            <hc:NumericUpDown x:Name="PositionY" Grid.Column="2"
                                      hc:InfoElement.Title="Y" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.TitleWidth="15"
                                      hc:InfoElement.Placeholder="0.0"
                                      ValueChanged="PositionCoordinate_ValueChanged"
                                      Style="{StaticResource ModernNumericUpDownStyle}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Typography -->
                <TextBlock Text="{Binding [font_style],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernSettingsGroupTitle}" Margin="4,10,0,6"/>
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,8">
                    <StackPanel Margin="10">
                        <!-- Font Family -->
                        <TextBlock Text="{Binding [font_family],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                        <local:FontFamilyControl FontFamilyName="{Binding Family, Mode=TwoWay}" Margin="0,0,0,16"/>

                        <!-- Style -->
                        <TextBlock Text="{Binding [style],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <ToggleButton Width="40" Height="32" Margin="0,0,8,0" 
                                            IsChecked="{Binding IsBold, Mode=TwoWay}"
                                            Style="{StaticResource FontStyleToggleButtonStyle}">
                                    <TextBlock Text="B" FontWeight="Bold"/>
                                </ToggleButton>
                                <ToggleButton Width="40" Height="32" 
                                            IsChecked="{Binding IsItalic, Mode=TwoWay}"
                                            Style="{StaticResource FontStyleToggleButtonStyle}">
                                    <TextBlock Text="I" FontStyle="Italic" FontFamily="Times New Roman"/>
                                </ToggleButton>
                            </StackPanel>

                            <local:TextPropertyColorPicker Grid.Column="2" 
                                                   SelectedColor="{Binding Color, Mode=TwoWay, Converter={StaticResource StringColorConverter}}" 
                                                   Height="32" Width="100"/>
                        </Grid>

                        <!-- Size & Rotation -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding [font_size],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                                <hc:NumericUpDown Value="{Binding Size, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                                  hc:InfoElement.Placeholder="pt" 
                                                  Style="{StaticResource ModernNumericUpDownStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="{Binding [font_rotation],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                                <hc:NumericUpDown Value="{Binding Rotation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                                  hc:InfoElement.Placeholder="°" 
                                                  Style="{StaticResource ModernNumericUpDownStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Rendering -->
                <TextBlock Text="{Binding [advanced_rendering],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernSettingsGroupTitle}" Margin="4,10,0,6"/>
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,8">
                    <StackPanel Margin="10">
                        <DockPanel>
                            <TextBlock Text="{Binding [anti_aliasing],Source={x:Static lg:LanguageService.Instance}}" VerticalAlignment="Center" Style="{StaticResource ModernLabelStyle}"/>
                            <ToggleButton Style="{StaticResource ToggleButtonSwitch}" HorizontalAlignment="Right" IsChecked="{Binding AntiAliasEnable, Mode=TwoWay}"/>
                        </DockPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
