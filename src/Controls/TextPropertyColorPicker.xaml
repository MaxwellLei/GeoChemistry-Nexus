<UserControl x:Class="GeoChemistryNexus.Controls.TextPropertyColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Color Preview Circle -->
        <Button Grid.Column="0" 
                Width="24" Height="24" 
                Margin="0,0,8,0"
                Cursor="Hand"
                Command="{Binding ShowColorPickerCommand, RelativeSource={RelativeSource AncestorType=local:TextPropertyColorPicker}}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="12" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1"
                            Background="{Binding SelectedBrush, RelativeSource={RelativeSource AncestorType=local:TextPropertyColorPicker}}">
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Hex Input -->
        <hc:TextBox Grid.Column="1" 
                   Text="{Binding HexColor, RelativeSource={RelativeSource AncestorType=local:TextPropertyColorPicker}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                   BorderThickness="1"
                   BorderBrush="#E0E0E0"
                   Height="28"
                   VerticalContentAlignment="Center"
                   Padding="5,0"/>

        <!-- HandyControl ColorPicker Popup -->
        <Popup x:Name="ColorPopup" 
               PlacementTarget="{Binding RelativeSource={RelativeSource AncestorType=local:TextPropertyColorPicker}}" 
               StaysOpen="False"
               AllowsTransparency="True"
               Placement="Bottom">
            <Border Background="White" CornerRadius="4" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.4"/>
                </Border.Effect>
                <local:CustomColorPicker SelectedBrush="{Binding SelectedBrush, RelativeSource={RelativeSource AncestorType=local:TextPropertyColorPicker}, Mode=TwoWay}"/>
            </Border>
        </Popup>
    </Grid>
</UserControl>
