<UserControl x:Class="GeoChemistryNexus.Controls.NewTemplateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             xmlns:lg="clr-namespace:GeoChemistryNexus.Helpers"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource RegionBrush}">

    <UserControl.Resources>
        <Style x:Key="ChipBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="4" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ChipTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="ChipDefaultTextStyle" TargetType="TextBlock" BasedOn="{StaticResource ChipTextStyle}">
            <Setter Property="Foreground" Value="#FFFF00"/> <!-- Yellow for default highlight -->
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Text" Value="(Default)"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDefault}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ChipCloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Opacity" Value="0.8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="âœ•" FontSize="10" FontWeight="Bold" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/> <!-- Scrollable Area -->
                <RowDefinition Height="Auto"/> <!-- Buttons (Fixed) -->
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
                <StackPanel>
                    <!-- Language Section -->
                    <Border Background="{DynamicResource RegionBrush}" CornerRadius="10" 
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Padding="20" Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Border Background="{DynamicResource PrimaryBrush}" Width="4" Height="16" CornerRadius="2" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding [enter_supported_languages],Source={x:Static lg:LanguageService.Instance}}" 
                                           FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>

                            <ItemsControl x:Name="LanguageItemsControl" Grid.Row="1" Margin="0,0,0,10">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ChipBorderStyle}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Style="{StaticResource ChipDefaultTextStyle}"/>
                                                <TextBlock Text="{Binding Text}" Style="{StaticResource ChipTextStyle}" Margin="0,0,8,0" />
                                                <Button Tag="{Binding}" Click="RemoveLanguageButton_Click" 
                                                        Style="{StaticResource ChipCloseButtonStyle}" Width="16" Height="16"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <hc:ComboBox x:Name="LanguageInputComboBox" 
                                             IsEditable="True"
                                             StaysOpenOnEdit="True"
                                             hc:InfoElement.Placeholder="{Binding [enter_language_add],Source={x:Static lg:LanguageService.Instance}}"
                                             DisplayMemberPath="Name"
                                             SelectedValuePath="Code"
                                             SelectionChanged="LanguageInputComboBox_SelectionChanged"
                                             PreviewKeyDown="LanguageInputComboBox_PreviewKeyDown"
                                             Width="300" Margin="0,0,10,0"
                                             Style="{StaticResource ComboBoxExtend}"/>

                                <TextBlock Grid.Column="1" Text="{Binding [enter_language_add],Source={x:Static lg:LanguageService.Instance}}" 
                                           VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}" 
                                           Margin="10,0,0,0" FontSize="12" TextWrapping="Wrap"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Category Section -->
                    <Border Background="{DynamicResource RegionBrush}" CornerRadius="10" 
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Padding="20" Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Border Background="{DynamicResource SuccessBrush}" Width="4" Height="16" CornerRadius="2" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding [enter_category_structure],Source={x:Static lg:LanguageService.Instance}}" 
                                           FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>

                            <ItemsControl x:Name="CategoryItemsControl" Grid.Row="1" Margin="0,0,0,10">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ChipBorderStyle}" Background="{DynamicResource SuccessBrush}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding DisplayName}" Style="{StaticResource ChipTextStyle}" Margin="0,0,8,0" />
                                                <Button Tag="{Binding}" Click="RemoveCategoryButton_Click" 
                                                        Style="{StaticResource ChipCloseButtonStyle}" Width="16" Height="16"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <hc:ComboBox x:Name="CategoryInputComboBox"
                                             IsEditable="True"
                                             StaysOpenOnEdit="True"
                                             hc:InfoElement.Placeholder="{Binding [enter_level_add],Source={x:Static lg:LanguageService.Instance}}"
                                             DisplayMemberPath="DisplayName"
                                             SelectedValuePath="DisplayName"
                                             SelectionChanged="CategoryInputComboBox_SelectionChanged"
                                             PreviewKeyDown="CategoryInputComboBox_PreviewKeyDown"
                                             Width="300" Margin="0,0,10,0"
                                             Style="{StaticResource ComboBoxExtend}"/>

                                <TextBlock Grid.Column="1" Text="{Binding [enter_level_add],Source={x:Static lg:LanguageService.Instance}}" 
                                           VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}" 
                                           Margin="10,0,0,0" FontSize="12" TextWrapping="Wrap"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Plot Type Section -->
                    <Border Background="{DynamicResource RegionBrush}" CornerRadius="10" 
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Padding="20" Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Border Background="{DynamicResource InfoBrush}" Width="4" Height="16" CornerRadius="2" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding [plot_type],Source={x:Static lg:LanguageService.Instance}}" 
                                           FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <hc:ComboBox x:Name="PlotTypeComboBox" Grid.Row="1"
                                         Style="{StaticResource ComboBoxExtend}" 
                                         HorizontalAlignment="Left" Width="200">
                                <ComboBoxItem Content="{Binding [two_dimensional_coordinate_plot],Source={x:Static lg:LanguageService.Instance}}" Tag="2D_Plot"/>
                                <ComboBoxItem Content="{Binding [ternary_phase_diagram],Source={x:Static lg:LanguageService.Instance}}" Tag="Ternary_Plot"/>
                            </hc:ComboBox>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="30,15,30,15">
                <Button x:Name="CancelButton" Content="{Binding [Cancel],Source={x:Static lg:LanguageService.Instance}}" 
                        Style="{StaticResource ButtonDefault}" Margin="0,0,10,0" Width="100" Height="36" Click="CancelButton_Click"/>
                <Button x:Name="ConfirmButton" Content="{Binding [Confirm],Source={x:Static lg:LanguageService.Instance}}" 
                        Style="{StaticResource ButtonPrimary}" Width="100" Height="36" Click="ConfirmButton_Click"/>
            </StackPanel>
        </Grid>
</UserControl>