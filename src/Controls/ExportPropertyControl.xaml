<UserControl x:Class="GeoChemistryNexus.Controls.ExportPropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:viewmodels="clr-namespace:GeoChemistryNexus.ViewModels"
             xmlns:lg="clr-namespace:GeoChemistryNexus.Services"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300"
             Background="#F5F5F7">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="10,12,10,12">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="&#xe648;" FontFamily="pack://application:,,,/GeoChemistryNexus;component/Data/Icon/#iconfont" FontSize="24" Foreground="#1D1D1F" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding [export_and_tools], Source={x:Static lg:LanguageService.Instance}, TargetNullValue='导出/工具'}" 
                           FontSize="22" FontWeight="Bold" Foreground="#1D1D1F" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Image Export Section -->
            <TextBlock Text="{Binding [export_image], Source={x:Static lg:LanguageService.Instance}, TargetNullValue='导出图片'}" 
                       Style="{StaticResource ModernSettingsGroupTitle}" Margin="4,10,0,6"/>
            
            <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,8">
                <StackPanel Margin="10">
                    <!-- Format Selection -->
                    <Grid Margin="0,0,0,16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding [format], Source={x:Static lg:LanguageService.Instance}, TargetNullValue='格式'}" 
                                   Style="{StaticResource ModernLabelStyle}"/>
                        
                        <ListBox Grid.Row="1" 
                                 ItemsSource="{Binding Formats}" 
                                 SelectedItem="{Binding SelectedFormat}"
                                 Style="{StaticResource SegmentedControlStyle}"
                                 ItemContainerStyle="{StaticResource SegmentedItemStyle}">
                        </ListBox>
                    </Grid>
                    
                    <!-- Export Button -->
                    <Button Command="{Binding ExportCommand}" 
                            Style="{StaticResource ModernButtonStyle}"
                            HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xe648;" FontFamily="pack://application:,,,/GeoChemistryNexus;component/Data/Icon/#iconfont" Margin="0,1,8,0" FontSize="16"/>
                            <TextBlock Text="{Binding [export_image], Source={x:Static lg:LanguageService.Instance}, TargetNullValue='导出图片'}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
            
            <!-- Third Party Apps Section -->
            <TextBlock Text="{Binding [third_party_software], Source={x:Static lg:LanguageService.Instance}, TargetNullValue='第三方软件'}" 
                       Style="{StaticResource ModernSettingsGroupTitle}" Margin="4,10,0,6"/>
            
            <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,8">
                <StackPanel Margin="10">
                    <Grid Margin="0,0,0,16">
                         <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding [select_software], Source={x:Static lg:LanguageService.Instance}, TargetNullValue='閫夋嫨杞欢'}" 
                                   Style="{StaticResource ModernLabelStyle}"/>
                        
                        <ComboBox Grid.Row="1" 
                                  ItemsSource="{Binding ThirdPartyApps}" 
                                  SelectedItem="{Binding SelectedThirdPartyApp}"
                                  Style="{StaticResource ModernComboBoxStyle}"
                                  Height="40"/>
                    </Grid>
                    
                    <Button Command="{Binding OpenThirdPartyCommand}" 
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#34C759" 
                            HorizontalAlignment="Stretch">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xe612;" FontFamily="pack://application:,,,/GeoChemistryNexus;component/Data/Icon/#iconfont" Margin="0,1,8,0" FontSize="16"/>
                            <TextBlock Text="{Binding [open_with_third_party_software], Source={x:Static lg:LanguageService.Instance}, TargetNullValue='打开'}"/>
                        </StackPanel>
                        <!-- Override hover color for green button -->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border" 
                                        Background="{TemplateBinding Background}" 
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#2DB84C"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#249E40"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="#A0A0A0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
