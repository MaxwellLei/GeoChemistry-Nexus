<UserControl x:Class="GeoChemistryNexus.Controls.PolygonPropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:models="clr-namespace:GeoChemistryNexus.Models"
             xmlns:cvs="clr-namespace:GeoChemistryNexus.Converter"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:lg="clr-namespace:GeoChemistryNexus.Services"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300"
             Background="#F5F5F7">
    <UserControl.Resources>
        <cvs:NumericTypeConverter x:Key="NumericTypeConverter"/>
        <cvs:StringColorConverter x:Key="StringColorConverter"/>
        <cvs:DoublePrecisionConverter x:Key="DoublePrecisionConverter" Precision="2"/>
    </UserControl.Resources>

    <Grid DataContext="{Binding SelectedObject, RelativeSource={RelativeSource AncestorType=local:PolygonPropertyControl}}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10,12,10,12">
                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="&#xe61b;" FontFamily="../Data/Icon/#iconfont" FontSize="24" Foreground="#1D1D1F" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding [polygon],Source={x:Static lg:LanguageService.Instance}}" 
                               FontSize="22" FontWeight="Bold" Foreground="#1D1D1F" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Vertices -->
                <TextBlock Text="{Binding [vertices],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernSettingsGroupTitle}" Margin="4,10,0,6"/>
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,8">
                    <StackPanel Margin="10">
                        <local:VerticesEditorControl VerticesValue="{Binding Vertices}"/>
                    </StackPanel>
                </Border>

                <!-- Style -->
                <TextBlock Text="{Binding [style],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernSettingsGroupTitle}" Margin="4,10,0,6"/>
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,8">
                    <StackPanel Margin="10">
                        
                        <!-- Fill Color -->
                        <TextBlock Text="Fill Color" Style="{StaticResource ModernLabelStyle}"/>
                        <local:TextPropertyColorPicker 
                            SelectedColor="{Binding FillColor, Mode=TwoWay, Converter={StaticResource StringColorConverter}}" 
                            HorizontalAlignment="Stretch"
                            Height="32"
                            Margin="0,0,0,16"/>

                        <!-- Border Color -->
                        <TextBlock Text="Border Color" Style="{StaticResource ModernLabelStyle}"/>
                        <local:TextPropertyColorPicker 
                            SelectedColor="{Binding BorderColor, Mode=TwoWay, Converter={StaticResource StringColorConverter}}" 
                            HorizontalAlignment="Stretch"
                            Height="32"
                            Margin="0,0,0,16"/>

                        <!-- Border Width -->
                        <TextBlock Text="Border Width" Style="{StaticResource ModernLabelStyle}"/>
                        <hc:NumericUpDown Value="{Binding BorderWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                    hc:InfoElement.Placeholder="1.0"
                                    Style="{StaticResource ModernNumericUpDownStyle}"/>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
