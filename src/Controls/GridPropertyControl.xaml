<UserControl x:Class="GeoChemistryNexus.Controls.GridPropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:models="clr-namespace:GeoChemistryNexus.Models"
             xmlns:cvs="clr-namespace:GeoChemistryNexus.Converter"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:lg="clr-namespace:GeoChemistryNexus.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300">
    <UserControl.Resources>
        <cvs:NumericTypeConverter x:Key="NumericTypeConverter"/>
        <cvs:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <cvs:StringColorConverter x:Key="StringColorConverter"/>
        <cvs:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <cvs:DoublePrecisionConverter x:Key="DoublePrecisionConverter" Precision="2"/>
        <cvs:EnumToDisplayStringConverter x:Key="EnumToDisplayStringConverter"/>
        <cvs:EnumTypeToValuesConverter x:Key="EnumTypeToValuesConverter"/>
        
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Expander" BasedOn="{StaticResource ExpanderBaseStyle}">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </UserControl.Resources>

    <Grid DataContext="{Binding SelectedObject, RelativeSource={RelativeSource AncestorType=local:GridPropertyControl}}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                <!-- Header -->
                <DockPanel LastChildFill="False" Margin="0,0,0,15">
                    <TextBlock Text="{Binding [grid],Source={x:Static lg:LanguageService.Instance}}" FontWeight="Bold" FontSize="16" Foreground="#333"/>
                </DockPanel>

                <!-- Major Grid Line -->
                <Expander Header="{Binding [major_grid_line],Source={x:Static lg:LanguageService.Instance}}">
                    <StackPanel Margin="0,10,0,0">
                        <CheckBox IsChecked="{Binding MajorGridLineIsVisible}" Content="{Binding [is_visible],Source={x:Static lg:LanguageService.Instance}}" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding [width],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}"/>
                                <hc:NumericUpDown Value="{Binding MajorGridLineWidth, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="{Binding [color],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}"/>
                                <local:TextPropertyColorPicker SelectedColor="{Binding MajorGridLineColor, Mode=TwoWay, Converter={StaticResource StringColorConverter}}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="{Binding [pattern],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}"/>
                        <ComboBox ItemsSource="{Binding Source={x:Type models:LineDefinition+LineType}, Converter={StaticResource EnumTypeToValuesConverter}}"
                                  SelectedItem="{Binding MajorGridLinePattern, Mode=TwoWay}" Margin="0,0,0,10">
                             <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumToDisplayStringConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <CheckBox IsChecked="{Binding MajorGridLineAntiAlias}" Content="{Binding [enable_anti_alias],Source={x:Static lg:LanguageService.Instance}}" Margin="0,0,0,10"/>
                    </StackPanel>
                </Expander>

                <!-- Minor Grid Line -->
                <Expander Header="{Binding [minor_grid_Line],Source={x:Static lg:LanguageService.Instance}}">
                    <StackPanel Margin="0,10,0,0">
                        <CheckBox IsChecked="{Binding MinorGridLineIsVisible}" Content="{Binding [is_visible],Source={x:Static lg:LanguageService.Instance}}" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding [width],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}"/>
                                <hc:NumericUpDown Value="{Binding MinorGridLineWidth, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="{Binding [color],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}"/>
                                <local:TextPropertyColorPicker SelectedColor="{Binding MinorGridLineColor, Mode=TwoWay, Converter={StaticResource StringColorConverter}}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="{Binding [pattern],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}"/>
                        <ComboBox ItemsSource="{Binding Source={x:Type models:LineDefinition+LineType}, Converter={StaticResource EnumTypeToValuesConverter}}"
                                  SelectedItem="{Binding MinorGridLinePattern, Mode=TwoWay}" Margin="0,0,0,10">
                             <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumToDisplayStringConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <CheckBox IsChecked="{Binding MinorGridLineAntiAlias}" Content="{Binding [enable_anti_alias],Source={x:Static lg:LanguageService.Instance}}" Margin="0,0,0,10"/>
                    </StackPanel>
                </Expander>
                
                <!-- Background Fill -->
                <Expander Header="{Binding [background_fill],Source={x:Static lg:LanguageService.Instance}}">
                    <StackPanel Margin="0,10,0,0">
                        <CheckBox IsChecked="{Binding GridAlternateFillingIsEnable}" Content="{Binding [enable_alternating_fill],Source={x:Static lg:LanguageService.Instance}}" Margin="0,0,0,10"/>
                        
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding [fill_color_1],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}"/>
                                <local:TextPropertyColorPicker SelectedColor="{Binding GridFillColor1, Mode=TwoWay, Converter={StaticResource StringColorConverter}}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="{Binding [fill_color_2],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}"/>
                                <local:TextPropertyColorPicker SelectedColor="{Binding GridFillColor2, Mode=TwoWay, Converter={StaticResource StringColorConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Expander>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
