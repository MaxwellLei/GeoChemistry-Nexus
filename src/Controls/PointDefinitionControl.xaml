<UserControl x:Class="GeoChemistryNexus.Controls.PointDefinitionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lg="clr-namespace:GeoChemistryNexus.Services"
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             x:Name="RootControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <hc:NumericUpDown x:Name="NumericUpDownX" Grid.Column="0"
                          hc:InfoElement.Title="X" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.TitleWidth="15"
                          hc:InfoElement.Placeholder="0.0"
                          Style="{StaticResource ModernNumericUpDownStyle}"
                          GotFocus="Coordinate_GotFocus"
                          LostFocus="Coordinate_LostFocus"/>

        <hc:NumericUpDown x:Name="NumericUpDownY" Grid.Column="2"
                          hc:InfoElement.Title="Y" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.TitleWidth="15"
                          hc:InfoElement.Placeholder="0.0"
                          Style="{StaticResource ModernNumericUpDownStyle}"
                          GotFocus="Coordinate_GotFocus"
                          LostFocus="Coordinate_LostFocus"/>
    </Grid>
</UserControl>
