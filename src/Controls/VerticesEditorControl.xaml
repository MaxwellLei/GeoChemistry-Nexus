<UserControl x:Class="GeoChemistryNexus.Controls.VerticesEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:models="clr-namespace:GeoChemistryNexus.Models"
             xmlns:cvs="clr-namespace:GeoChemistryNexus.Converter"
             x:Name="RootControl"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <UserControl.Resources>
        <cvs:NumericTypeConverter x:Key="NumericTypeConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" MaxHeight="250">
            <ItemsControl ItemsSource="{Binding ElementName=RootControl, Path=VerticesValue}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:PointDefinition}">
                        <Grid Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="X:" VerticalAlignment="Center" Margin="2,0,5,0" MinWidth="15"/>
                                    <hc:NumericUpDown Grid.Column="1" Value="{Binding X, Converter={StaticResource NumericTypeConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>

                                <Grid Grid.Row="1" Margin="0,4,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Y:" VerticalAlignment="Center" Margin="2,0,5,0" MinWidth="15"/>
                                    <hc:NumericUpDown Grid.Column="1" Value="{Binding Y, Converter={StaticResource NumericTypeConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                            </Grid>

                            <Button Grid.Column="1" 
                                    x:Name="DeleteButton"
                                    Click="DeleteButton_Click"
                                    ToolTip="删除此顶点"
                                    Content="X"
                                    FontWeight="Bold"
                                    Foreground="DimGray"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Width="24" Height="24" 
                                    Margin="8,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button Grid.Row="1" 
                x:Name="AddButton"
                Click="AddButton_Click"
                Content="添加新顶点" 
                Margin="0,8,0,0"
                HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>