<UserControl x:Class="GeoChemistryNexus.Controls.VerticesEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:lg="clr-namespace:GeoChemistryNexus.Services"
             xmlns:models="clr-namespace:GeoChemistryNexus.Models"
             xmlns:cvs="clr-namespace:GeoChemistryNexus.Converter"
             x:Name="RootControl"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <UserControl.Resources>
        <cvs:NumericTypeConverter x:Key="NumericTypeConverter"/>
        
        <Style x:Key="ButtonIcon" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EEE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DDD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" MaxHeight="250">
            <ItemsControl x:Name="VerticesItemsControl" ItemsSource="{Binding ElementName=RootControl, Path=VerticesValue}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:PointDefinition}">
                        <Grid Margin="0,4,4,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="X:" VerticalAlignment="Center" Margin="2,0,5,0" MinWidth="15"/>
                                    <hc:NumericUpDown Grid.Column="1" Value="{Binding X, Converter={StaticResource NumericTypeConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      Tag="{Binding}"
                                                      GotFocus="Coordinate_GotFocus"
                                                      LostFocus="Coordinate_LostFocus"/>
                                </Grid>

                                <Grid Grid.Row="1" Margin="0,4,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Y:" VerticalAlignment="Center" Margin="2,0,5,0" MinWidth="15"/>
                                    <hc:NumericUpDown Grid.Column="1" Value="{Binding Y, Converter={StaticResource NumericTypeConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      Tag="{Binding}"
                                                      GotFocus="Coordinate_GotFocus"
                                                      LostFocus="Coordinate_LostFocus"/>
                                </Grid>
                            </Grid>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0,0,0">
                                <!-- 拾取坐标按钮 -->
                                <Button Width="20" Height="20" Margin="0,0,4,0"
                                        Style="{StaticResource ButtonIcon}"
                                        ToolTip="{Binding [pick_coordinate],Source={x:Static lg:LanguageService.Instance}}"
                                        Click="PickPointButton_Click">
                                    <TextBlock FontFamily="pack://application:,,,/GeoChemistryNexus;component/Data/Icon/#iconfont" Text="&#xe601;" FontSize="14" Foreground="#666"/>
                                </Button>

                                <!-- 删除按钮 -->
                                <Button x:Name="DeleteButton"
                                        Width="20" Height="20"
                                        Style="{StaticResource ButtonIcon}"
                                        Click="DeleteButton_Click"
                                        ToolTip="{Binding [remove_point],Source={x:Static lg:LanguageService.Instance}}">
                                    <Path Data="M19,6.41L17.59,5 12,10.59 6.41,5 5,6.41 10.59,12 5,17.59 6.41,19 12,13.41 17.59,19 19,17.59 13.41,12z" 
                                          Fill="#666" 
                                          Stretch="Uniform" 
                                          Width="12" 
                                          Height="12"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button Grid.Row="1" 
                x:Name="AddButton"
                Click="AddButton_Click"
                Content="{Binding [remove_point],Source={x:Static lg:LanguageService.Instance}}" 
                Margin="0,8,0,0"
                HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>