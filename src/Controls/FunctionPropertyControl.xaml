<UserControl x:Class="GeoChemistryNexus.Controls.FunctionPropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:models="clr-namespace:GeoChemistryNexus.Models"
             xmlns:cvs="clr-namespace:GeoChemistryNexus.Converter"
             xmlns:lg="clr-namespace:GeoChemistryNexus.Services"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300"
             Background="#F5F5F7">
    <UserControl.Resources>
        <cvs:NumericTypeConverter x:Key="NumericTypeConverter"/>
        <cvs:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <cvs:StringColorConverter x:Key="StringColorConverter"/>
        <cvs:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <cvs:EnumToDisplayStringConverter x:Key="EnumToDisplayStringConverter"/>
        <cvs:EnumTypeToValuesConverter x:Key="EnumTypeToValuesConverter"/>
    </UserControl.Resources>

    <Grid DataContext="{Binding SelectedObject, RelativeSource={RelativeSource AncestorType=local:FunctionPropertyControl}}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10,12,10,12">
                <!-- Header -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="&#xe63a;" FontFamily="../Data/Icon/#iconfont" FontSize="24" Foreground="#1D1D1F" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Function" FontWeight="Bold" FontSize="22" Foreground="#1D1D1F" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Formula -->
                <TextBlock Text="{Binding [content],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernSettingsGroupTitle}" Margin="4,10,0,6"/>
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,8">
                    <StackPanel Margin="10">
                        <TextBlock Text="{Binding [formula],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                        <TextBox Text="{Binding Formula, UpdateSourceTrigger=PropertyChanged, Delay=500}" 
                                 Padding="10,8" Margin="0,0,0,8" 
                                 Background="#F2F2F7" BorderThickness="0"
                                 hc:BorderElement.CornerRadius="6"
                                 AcceptsReturn="False" />
                        <TextBlock Text="{Binding FormulaErrorMessage}" 
                                   Foreground="#FF3B30" 
                                   FontSize="12" 
                                   Visibility="{Binding HasFormulaError, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>

                <!-- Range -->
                <TextBlock Text="{Binding [range],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernSettingsGroupTitle}" Margin="4,10,0,6"/>
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,8">
                    <StackPanel Margin="10">
                        <TextBlock Text="{Binding [range],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <hc:NumericUpDown Grid.Column="0" Value="{Binding MinX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                      hc:InfoElement.Title="{Binding [min_x],Source={x:Static lg:LanguageService.Instance}}" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.TitleWidth="20"
                                      hc:InfoElement.Placeholder="-10.0"
                                      Style="{StaticResource ModernNumericUpDownStyle}"/>
                                      
                            <hc:NumericUpDown Grid.Column="2" Value="{Binding MaxX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                      hc:InfoElement.Title="{Binding [max_x],Source={x:Static lg:LanguageService.Instance}}" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.TitleWidth="20"
                                      hc:InfoElement.Placeholder="10.0"
                                      Style="{StaticResource ModernNumericUpDownStyle}"/>
                        </Grid>

                        <TextBlock Text="{Binding [point_count],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                        <hc:NumericUpDown Value="{Binding PointCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                    Minimum="2" Maximum="10000"
                                    hc:InfoElement.Placeholder="1000"
                                    Style="{StaticResource ModernNumericUpDownStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Style -->
                <TextBlock Text="{Binding [style],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernSettingsGroupTitle}" Margin="4,10,0,6"/>
                <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,8">
                    <StackPanel Margin="10">
                         <!-- Color -->
                        <TextBlock Text="{Binding [color],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                         <local:TextPropertyColorPicker 
                               SelectedColor="{Binding Color, Mode=TwoWay, Converter={StaticResource StringColorConverter}}" 
                               HorizontalAlignment="Stretch"
                               Height="32"
                               Margin="0,0,0,16"/>

                        <!-- Width -->
                        <TextBlock Text="{Binding [width],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                        <hc:NumericUpDown Value="{Binding Width, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                    hc:InfoElement.Placeholder="1.5" Margin="0,0,0,16"
                                    Style="{StaticResource ModernNumericUpDownStyle}"/>

                        <!-- Line Type -->
                        <TextBlock Text="{Binding [type],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource ModernLabelStyle}"/>
                        <ComboBox ItemsSource="{Binding Source={x:Type models:LineDefinition+LineType}, Converter={StaticResource EnumTypeToValuesConverter}}"
                                  SelectedItem="{Binding Style, Mode=TwoWay}"
                                  Style="{StaticResource ModernComboBoxStyle}">
                             <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumToDisplayStringConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
