<UserControl x:Class="GeoChemistryNexus.Controls.FunctionPropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:models="clr-namespace:GeoChemistryNexus.Models"
             xmlns:cvs="clr-namespace:GeoChemistryNexus.Converter"
             xmlns:lg="clr-namespace:GeoChemistryNexus.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300">
    <UserControl.Resources>
        <cvs:NumericTypeConverter x:Key="NumericTypeConverter"/>
        <cvs:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <cvs:StringColorConverter x:Key="StringColorConverter"/>
        <cvs:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <cvs:EnumToDisplayStringConverter x:Key="EnumToDisplayStringConverter"/>
        <cvs:EnumTypeToValuesConverter x:Key="EnumTypeToValuesConverter"/>
        
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Expander" BasedOn="{StaticResource ExpanderBaseStyle}">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </UserControl.Resources>

    <Grid DataContext="{Binding SelectedObject, RelativeSource={RelativeSource AncestorType=local:FunctionPropertyControl}}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                <!-- Header -->
                <DockPanel LastChildFill="False" Margin="0,0,0,15">
                    <TextBlock Text="Function" FontWeight="Bold" FontSize="16" Foreground="#333"/>
                </DockPanel>

                <!-- Formula -->
                <Expander Header="{Binding [content],Source={x:Static lg:LanguageService.Instance}}">
                    <StackPanel Margin="8,5,8,5">
                        <TextBlock Text="{Binding [formula],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <TextBox Text="{Binding Formula, UpdateSourceTrigger=PropertyChanged, Delay=500}" 
                                 Padding="5" Margin="0,0,0,10" 
                                 AcceptsReturn="False" />
                        <TextBlock Text="{Binding FormulaErrorMessage}" 
                                   Foreground="Red" 
                                   FontSize="12" 
                                   Visibility="{Binding HasFormulaError, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                </Expander>

                <!-- Range -->
                <Expander Header="{Binding [range],Source={x:Static lg:LanguageService.Instance}}">
                    <StackPanel Margin="8,5,8,5">
                        <TextBlock Text="{Binding [point_count],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <hc:NumericUpDown Grid.Column="0" Value="{Binding MinX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                      hc:InfoElement.Title="{Binding [min_x],Source={x:Static lg:LanguageService.Instance}}" hc:InfoElement.TitlePlacement="Left"
                                      hc:InfoElement.Placeholder="-10.0"/>
                                      
                            <hc:NumericUpDown Grid.Column="2" Value="{Binding MaxX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                      hc:InfoElement.Title="{Binding [max_x],Source={x:Static lg:LanguageService.Instance}}" hc:InfoElement.TitlePlacement="Left"
                                      hc:InfoElement.Placeholder="10.0"/>
                        </Grid>

                        <TextBlock Text="{Binding [point_count],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <hc:NumericUpDown Value="{Binding PointCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                    Minimum="2" Maximum="10000"
                                    hc:InfoElement.Placeholder="1000" Margin="0,0,0,10"/>
                    </StackPanel>
                </Expander>

                <!-- Style -->
                <Expander Header="{Binding [style],Source={x:Static lg:LanguageService.Instance}}">
                    <StackPanel Margin="8,5,8,5">
                         <!-- Color -->
                        <TextBlock Text="{Binding [color],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                         <local:TextPropertyColorPicker 
                               SelectedColor="{Binding Color, Mode=TwoWay, Converter={StaticResource StringColorConverter}}" 
                               HorizontalAlignment="Left"
                               Width="150"
                               Margin="0,0,0,10"/>

                        <!-- Width -->
                        <TextBlock Text="{Binding [width],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <hc:NumericUpDown Value="{Binding Width, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                    hc:InfoElement.Placeholder="1.5" Margin="0,0,0,10"/>

                        <!-- Line Type -->
                        <TextBlock Text="{Binding [type],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <ComboBox ItemsSource="{Binding Source={x:Type models:LineDefinition+LineType}, Converter={StaticResource EnumTypeToValuesConverter}}"
                                  SelectedItem="{Binding Style, Mode=TwoWay}">
                             <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumToDisplayStringConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
