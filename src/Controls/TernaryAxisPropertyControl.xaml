<UserControl x:Class="GeoChemistryNexus.Controls.TernaryAxisPropertyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeoChemistryNexus.Controls"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:models="clr-namespace:GeoChemistryNexus.Models"
             xmlns:cvs="clr-namespace:GeoChemistryNexus.Converter"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:lg="clr-namespace:GeoChemistryNexus.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300">
    <UserControl.Resources>
        <cvs:NumericTypeConverter x:Key="NumericTypeConverter"/>
        <cvs:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <cvs:StringColorConverter x:Key="StringColorConverter"/>
        <cvs:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <cvs:DoublePrecisionConverter x:Key="DoublePrecisionConverter" Precision="4"/>
        
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Expander" BasedOn="{StaticResource ExpanderBaseStyle}">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ToggleButtonSwitch" TargetType="ToggleButton" BasedOn="{StaticResource ToggleButtonSwitch}">
        </Style>
    </UserControl.Resources>

    <Grid DataContext="{Binding SelectedObject, RelativeSource={RelativeSource AncestorType=local:TernaryAxisPropertyControl}}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                <!-- Header -->
                <DockPanel LastChildFill="False" Margin="0,0,0,15">
                    <TextBlock Text="{Binding [axis_style],Source={x:Static lg:LanguageService.Instance}}" FontWeight="Bold" FontSize="16" Foreground="#333"/>
                </DockPanel>

                <!-- Axis Title -->
                <Expander Header="{Binding [axis_title],Source={x:Static lg:LanguageService.Instance}}">
                    <StackPanel Margin="8,5,8,5">
                         <!-- Content -->
                        <TextBlock Text="{Binding [content],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <local:LocalizedStringControl Value="{Binding Label, Mode=TwoWay}" Margin="0,0,0,10"/>

                        <!-- Font Family -->
                        <TextBlock Text="{Binding [font_family],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <local:FontFamilyControl FontFamilyName="{Binding Family, Mode=TwoWay}" Margin="0,0,0,10"/>

                        <!-- Style (Bold/Italic + Color) -->
                        <TextBlock Text="{Binding [style],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <ToggleButton Width="40" Height="30" Margin="0,0,4,0" 
                                            IsChecked="{Binding IsBold, Mode=TwoWay}"
                                            Style="{StaticResource FontStyleToggleButtonStyle}">
                                    <TextBlock Text="B" FontWeight="Bold"/>
                                </ToggleButton>
                                <ToggleButton Width="40" Height="30" 
                                            IsChecked="{Binding IsItalic, Mode=TwoWay}"
                                            Style="{StaticResource FontStyleToggleButtonStyle}">
                                    <TextBlock Text="I" FontStyle="Italic" FontFamily="Times New Roman"/>
                                </ToggleButton>
                            </StackPanel>

                            <local:TextPropertyColorPicker Grid.Column="2" 
                                                   SelectedColor="{Binding Color, Mode=TwoWay, Converter={StaticResource StringColorConverter}}" Width="100"/>
                        </Grid>

                        <!-- Size -->
                        <TextBlock Text="{Binding [font_size],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <hc:NumericUpDown Value="{Binding Size, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" hc:InfoElement.Placeholder="pt" />

                        <!-- Offset -->
                         <TextBlock Text="{Binding [offset],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10" Margin="0,10,0,4"/>
                         <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <hc:NumericUpDown Grid.Column="0" Value="{Binding LabelOffsetX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                      hc:InfoElement.Title="{Binding [offset_x],Source={x:Static lg:LanguageService.Instance}}" hc:InfoElement.TitlePlacement="Left"
                                      hc:InfoElement.Placeholder="X"/>
                                      
                            <hc:NumericUpDown Grid.Column="2" Value="{Binding LabelOffsetY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" 
                                      hc:InfoElement.Title="{Binding [offset_y],Source={x:Static lg:LanguageService.Instance}}" hc:InfoElement.TitlePlacement="Left"
                                      hc:InfoElement.Placeholder="Y"/>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Major Tick Style -->
                <Expander Header="{Binding [major_tick_style],Source={x:Static lg:LanguageService.Instance}}">
                    <StackPanel Margin="8,5,8,5">
                         <!-- Width -->
                        <TextBlock Text="{Binding [width],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <hc:NumericUpDown Value="{Binding MajorTickWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" Margin="0,0,0,10"/>

                        <!-- Color -->
                        <TextBlock Text="{Binding [color],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                         <local:TextPropertyColorPicker SelectedColor="{Binding MajorTickWidthColor, Mode=TwoWay, Converter={StaticResource StringColorConverter}}" Margin="0,0,0,10"/>

                        <!-- Anti-aliasing -->
                        <DockPanel>
                            <TextBlock Text="{Binding [anti_aliasing],Source={x:Static lg:LanguageService.Instance}}" VerticalAlignment="Center" Foreground="#333"/>
                            <ToggleButton Style="{StaticResource ToggleButtonSwitch}" HorizontalAlignment="Right" IsChecked="{Binding MajorTickAntiAlias, Mode=TwoWay}"/>
                        </DockPanel>
                    </StackPanel>
                </Expander>

                <!-- Tick Labels -->
                <Expander Header="{Binding [tick_labels],Source={x:Static lg:LanguageService.Instance}}">
                    <StackPanel Margin="8,5,8,5">
                        <!-- Font Family -->
                        <TextBlock Text="{Binding [font_family],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <local:FontFamilyControl FontFamilyName="{Binding TickLableFamily, Mode=TwoWay}" Margin="0,0,0,10"/>

                        <!-- Style -->
                        <TextBlock Text="{Binding [style],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <ToggleButton Width="40" Height="30" Margin="0,0,4,0" 
                                            IsChecked="{Binding TickLableisBold, Mode=TwoWay}"
                                            Style="{StaticResource FontStyleToggleButtonStyle}">
                                    <TextBlock Text="B" FontWeight="Bold"/>
                                </ToggleButton>
                                <ToggleButton Width="40" Height="30" 
                                            IsChecked="{Binding TickLableisItalic, Mode=TwoWay}"
                                            Style="{StaticResource FontStyleToggleButtonStyle}">
                                    <TextBlock Text="I" FontStyle="Italic" FontFamily="Times New Roman"/>
                                </ToggleButton>
                            </StackPanel>

                            <local:TextPropertyColorPicker Grid.Column="2" 
                                                   SelectedColor="{Binding TickLablecolor, Mode=TwoWay, Converter={StaticResource StringColorConverter}}" Width="100"/>
                        </Grid>

                        <!-- Size -->
                        <TextBlock Text="{Binding [font_size],Source={x:Static lg:LanguageService.Instance}}" Style="{StaticResource LabelStyle}" FontSize="10"/>
                        <hc:NumericUpDown Value="{Binding TickLablesize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericTypeConverter}}" hc:InfoElement.Placeholder="pt" />
                    </StackPanel>
                </Expander>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>